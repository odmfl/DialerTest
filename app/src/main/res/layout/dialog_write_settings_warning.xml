<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/write_settings_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/write_settings_dialog_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/write_settings_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/write_settings_dialog_message"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/write_settings_dialog_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/write_settings_dialog_explanation"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/write_settings_manual_required"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/write_settings_manual_required"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:colorPrimary"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/write_settings_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/write_settings_instructions"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/write_settings_allow_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/write_settings_allow_button"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/write_settings_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/write_settings_cancel_button"
            style="@style/Widget.Material3.Button.TextButton" />

    </LinearLayout>
</ScrollView>
